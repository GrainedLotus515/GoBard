# Required
DISCORD_TOKEN=your_discord_bot_token_here

# Optional - YouTube (recommended for better search)
YOUTUBE_API_KEY=

# Optional - Spotify integration
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Cache settings
CACHE_DIR=./cache
CACHE_LIMIT=2GB

# Bot appearance
BOT_STATUS=online
BOT_ACTIVITY_TYPE=LISTENING
BOT_ACTIVITY=music
BOT_ACTIVITY_URL=

# Command registration
# Set to true for bots in 10+ guilds (updates take up to 1 hour)
REGISTER_COMMANDS_ON_BOT=false

# Behavior
WAIT_AFTER_QUEUE_EMPTIES=30

# Features
ENABLE_SPONSORBLOCK=false
SPONSORBLOCK_TIMEOUT=5

# Playback
DEFAULT_VOLUME=100
REDUCE_VOL_WHEN_VOICE=false
REDUCE_VOL_WHEN_VOICE_TARGET=70
